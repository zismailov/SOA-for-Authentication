<h1>Login</h1>
<form action="/login" method="post">
  <p>
    <input type="text" name="username">
  </p>
  <p>
    <input type="password" name="password">
  </p>
  <p>
    <input type="hidden" name="lt" value="#{@lt}">
    <input type="hidden" name="service" value="#{@service}">
    <input type="submit" value="Login">
  </p>
</form>
